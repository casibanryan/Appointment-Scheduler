<!doctype html>
<html lang="en">

<head>
    <title>Appointment System</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- bootstrap cdn-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <!--font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!-- font awesome cdn -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <!-- customize css-->
    <link rel="stylesheet" href="css/customize.css">
    <link rel="stylesheet" href="css/index.css">
</head>

<body>

    <!-- sidebar-->
    <div class="row">
        
            <%- include('components/sidebar') %>
          
        <div class="col-sm px-3 min-vh-100 bg-light">
            <header class="border-bottom" style='padding-bottom: 3.4rem'>
                <p class="fw-bold float-end text-muted p-3">Welcome, Resty Ochea</p>
            </header>

            <!-- content -->
            <div class="container-fluid">
                <div class="d-flex justify-content-between my-3">
                    <h3 class="fw-bold">
                        Schedule Clients
                    </h3>
                    <span class="">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#new_appointment"><i class="bi bi-plus-lg me-2"></i>New Appointment</button>
                    </span>
                </div>
                
                
                <div class="event-schedule-area-two bg-color pad100">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <ul class="nav custom-tab" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active show" id="sunday" data-bs-toggle="tab" role="tab" type="button"
                                            aria-controls="home" aria-selected="true" data-bs-target="#sunday">Sunday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="monday" data-bs-toggle="tab" data-bs-target="#monday" role="tab" type="button"
                                            aria-controls="monday" aria-selected="false">Monday</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="tuesday" data-bs-toggle="tab" data-bs-target="#tuesday" type="button" role="tab"
                                            aria-controls="tuesday" aria-selected="false">Tuesday</a>
                                    </li>
                                    <li class="nav-item d-none d-lg-block">
                                        <a class="nav-link" id="wednesday" data-bs-toggle="tab" data-bs-target="#wednesday" role="tab"
                                            aria-controls="wednesday" aria-selected="false">Wednesday</a>
                                    </li>
                                    <li class="nav-item mr-0 d-none d-lg-block">
                                        <a class="nav-link" id="thursday" data-bs-toggle="tab" type="button" data-bs-target="#thursday" role="tab"
                                            aria-controls="thursday" aria-selected="false">Thursday</a>
                                    </li>
                                    <li class="nav-item mr-0 d-none d-lg-block">
                                        <a class="nav-link" id="friday" data-bs-toggle="tab" type="button" data-bs-target="#friday" role="tab" aria-controls="friday"
                                            aria-selected="false">Friday</a>
                                    </li>
                                    <li class="nav-item mr-0 d-none d-lg-block">
                                        <a class="nav-link" id="saturday" data-bs-toggle="tab" type="button" data-bs-target="#saturday" role="tab" aria-controls="saturday"
                                            aria-selected="false">Saturday</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade active show" id="sunday" role="tabpanel" tabindex="0">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th class="text-center" scope="col">Date</th>
                                                        <th scope="col">Developer</th>
                                                        <th scope="col">Client</th>
                                                        <th scope="col">Venue</th>
                                                        <th class="text-center" scope="col"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr class="inner-box">
                                                        <th scope="row">
                                                            <div class="event-date">
                                                                <span>16</span>
                                                                <p>November</p>
                                                            </div>
                                                        </th>
                                                        <td>
                                                            <div class="event-img">
                                                                <img src="images/developer/resty.png" alt="resty-developer" data-bs-toggle="tooltip" data-bs-placement="top" title="Resty Ochea" />
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="event-wrap">
                                                                <h3><a href="/client-details"> Mike ben Delos</a></h3>
                                                                <div class="meta">
                                                                    <div class="organizers">
                                                                        <a href="#" class="text-decoration-none" >Cebu pacific</a>
                                                                    </div>
                                                                    <div class="categories">
                                                                        <a href="#" class="text-decoration-none">Software</a>
                                                                    </div>
                                                                    <div class="time">
                                                                        <span>05:35 AM - 08:00 AM 2h 25'</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="r-no">
                                                                <span>Room B3</span>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="primary-btn">
                                                                <a class="btn btn-primary" href="/client-details">More Details</a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- /col end-->
                        </div>
                        <!-- /row end-->
                    </div>
                </div>


            </div>
            <!-- end of content-->
        </div>
    </div>

    <!-- modal area-->
    <div class="modal fade" id="new_appointment"  aria-labelledby="new_appointmentLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="new_appointmentLabel">New appointment</h5>
                </div>
                <div class="modal-body px-5">
                    <form class="row needs-validation" novalidate>
                        <!-- client-->
                        <div class="mb-3">
                            <label for="client" class="form-label">
                                <i class="bi bi-person pe-1"></i>
                                 Client
                            </label>
                           <select name="client" id="client" class="form-select" required>
                                <option selected disabled value="">select a client </option>
                                <option value="1">One</option>
                           </select>
                           <div class="valid-feedback">
                               Looks good!
                           </div>
                           <div class="invalid-feedback">
                               Select a client!
                           </div>
                        </div>
                        <!-- end of client-->

                        <!-- developer-->
                        <div class="mb-3">
                            <label for="developer" class="form-label">
                                <i class="bi bi-person-workspace pe-1"></i>
                                 Developer 
                            </label>
                            <select name="client" id="developer" class="form-select" required>
                                <option selected disabled value="">select a developer </option>
                                <option value="1">One</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Select a developer!
                            </div>
                        </div>
                        <!-- developers-->

                        <!-- venue-->
                        <div class="mb-3">
                            <label for="venue" class="form-label">
                            <i class="bi bi-shop-window pe-1"></i>
                                Venue
                            </label>
                            <select name="venue" id="venue" class="form-select" required>
                                <option selected disabled value="">select a venue </option>
                                <option value="1">One</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Select a venue!
                            </div>
                        </div>
                        <!-- end of venue-->

                        <!-- categories -->
                        <div class="mb-3">
                            <label for="category" class="form-label">
                                <i class="bi bi-tags pe-1"></i>
                                Category
                            </label>
                            <select name="category" id="category" class="form-select" required>
                                <option selected disabled value="">select a category </option>
                                <option value="1">One</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Select a category!
                            </div>
                        </div>
                        <!-- end of categories-->

                        <!-- organization -->
                        <div class="mb-3">
                            <label for="organization" class="form-label">
                                <i class="fa fa-building-o pe-1" aria-hidden="true"></i>
                                Organization / Company
                            </label>
                            <input type="text" id="organization" class="form-control" placeholder="* if none leave blank">
                        </div>
                        <!-- end of organization -->

                        <!-- reason for appointment-->
                        <div class="mb-3">
                            <label for="reason" class="form-label">
                                <i class="bi bi-pin pe-1"></i>
                                Reason for appointment
                            </label>
                            <textarea name="reason" id="reason" class="form-control" cols="30" rows="3" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a reason for appointment
                            </div>
                        </div>
                        <!-- end of reason for appointment-->

                        <!-- additional comments -->
                        <div class="mb-3">
                            <label for="comment" class="form-label">
                                <i class="bi bi-chat-left-dots"></i>
                                 Additional Comments
                            </label>
                            <textarea name="reason" id="comment" class="form-control" cols="30" rows="3" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter additional comments
                            </div>
                        </div>
                        <!-- end of additional comments-->

                        <!-- date of appointment-->
                        <div class="mb-3">
                            <label for="date" class="form-label">
                                <i class="fa fa-calendar pe-1" aria-hidden="true"></i>
                                Date of Appointment
                            </label>
                            <input type="date" id="date" required class="form-control">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Select a date of appointment!
                            </div>
                        </div>
                        <!-- end of date of appointment-->
                        
                        <!-- time of appointment -->
                        <div class="mb-3">
                            <label for="time" class="form-label">
                            <i class="fa fa-clock-o pe-1" aria-hidden="true"></i>
                                Time of Appointment
                            </label>
                            <input type="time" class="form-control" id="time" required>

                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Select a time of appointment!
                            </div>
                        </div>

                        <!-- choose a reminder -->
                        <div class="mb-3 d-flex">
                                <label for="" class="form-label me-4">
                                    <i class="fa fa-bell-o pe-1" aria-hidden="true"></i>
                                    Send Reminder
                                </label>
                            <div class="form-check me-3">
                                <input class="form-check-input" type="checkbox" value="" name="reminder" id="sms">
                                <label class="form-check-label" for="sms">
                                    SMS
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" name="reminder" id="email" >
                                <label class="form-check-label" for="email">
                                    Email
                                </label>
                            </div>
                        </div>


                    </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary text-uppercase px-3"><i class="bi bi-calendar2-event me-1"></i> Set</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- scrips-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js"
        integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy"
        crossorigin="anonymous"></script>
    <script src="js/index.js"></script>
</body>

</html>